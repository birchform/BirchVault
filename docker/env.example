# BirchVault Self-Hosted Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_PASSWORD=your-super-secret-postgres-password
POSTGRES_DB=birchvault
POSTGRES_PORT=5432

# ===========================================
# JWT Configuration
# Generate a secure secret: openssl rand -base64 32
# ===========================================
JWT_SECRET=your-super-secret-jwt-secret-at-least-32-characters
JWT_EXPIRY=3600

# ===========================================
# API Keys
# Generate these using: openssl rand -base64 32
# ===========================================
ANON_KEY=your-anon-key
SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# URLs
# ===========================================
SITE_URL=http://localhost:3000
API_EXTERNAL_URL=http://localhost:8000
SUPABASE_PUBLIC_URL=http://localhost:8000
ADDITIONAL_REDIRECT_URLS=http://localhost:3000/auth/callback

# ===========================================
# Email Configuration (Optional)
# Required for email verification and password reset
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_ADMIN_EMAIL=admin@example.com
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false

# ===========================================
# OAuth Providers (Optional)
# Configure in your OAuth provider's dashboard
# ===========================================
ENABLE_GOOGLE=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

ENABLE_GITHUB=false
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# Signup Configuration
# ===========================================
DISABLE_SIGNUP=false

# ===========================================
# Port Configuration
# ===========================================
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443
STUDIO_PORT=3001
WEB_PORT=3000







